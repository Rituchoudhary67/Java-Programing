 // Day 3: H.W Problem
      // 1] Make a calculator.Take 2 number ( a & b) from user and an
      //operation as follows : 1] + [Addtion] a + b
      //             2] - [Substraction] a - b
      //             3] * [Multiplication] a * b  
      //             4] / [Division] a / b
      //             5] % [Modulo or remainder] a % b
      // Calculate th result according to the operation given and display 
      //it to the user
      
      Scanner sc = new Scanner(System.in);
      int a = sc.nextInt();
      int b = sc.nextInt();
      int number = sc.nextInt();
      System.out.println("a is " + a + " and b is " + b);
      // System.out.println(number);
      
      switch(number) {
        case 1 : System.out.println("Addation of a and b is " + (a + b));
        break;
        case 2 : System.out.println("Substraction of a and b is " + (a - b));
        break;
        case 3 : System.out.println("Multiplication of a and b is " + (a * b));
        break;
        case 4 : if (b == 0 ) {
                        System.out.println("Inavalid division");
                    } else {
                       System.out.println("Division of a and b is " + (a / b));
                    }
        break;
        case 5 : if (b == 0 ) {
                        System.out.println("Inavalid value of b");
                    } else {
                        System.out.println("Modulo of a and b is " + (a % b));
                    } 
        break;
        default : System.out.println("Please enter the operation number between 1 to 5");
      }
      

   
